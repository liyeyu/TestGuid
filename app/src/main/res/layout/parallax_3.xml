<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@android:color/holo_green_light"
              android:layout_height="match_parent">
    <ImageView
        app:x_in="0.8"
        app:x_out="0.8"
        app:y_in="0.8"
        app:y_out="0.5"
        android:id="@+id/iv_1_1"
        android:src="@android:drawable/ic_menu_send"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>
    <ImageView
        app:x_in="1.2"
        app:x_out="1.8"
        app:y_in="0.8"
        app:y_out="0.5"
        android:id="@+id/iv_1_2"
        android:layout_toRightOf="@+id/iv_1_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:src="@android:drawable/ic_menu_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:a_in="1"
        app:a_out="0.8"
        app:x_in="1"
        app:x_out="1"
        app:y_in="1"
        app:y_out="1"
        android:id="@+id/iv_1_3"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:x_in="1"
        app:x_out="1"
        app:y_in="1.2"
        app:y_out="1.2"
        android:id="@+id/iv_1_4"
        android:layout_toRightOf="@+id/iv_1_3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:src="@android:drawable/ic_menu_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:x_in="0.5"
        app:x_out="0.5"
        app:y_in="1.9"
        app:y_out="1.9"
        android:id="@+id/iv_1_5"
        android:layout_toRightOf="@+id/iv_1_4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:src="@android:drawable/ic_menu_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>